# http://editorconfig.org
root = true;


[*] # 表示所有的文件适用
charset = utf-8
indent-style = space # 缩进风格（tab | space）
indent-size = 2 # 缩进大小
end_of_line = lf # 控制换行类型（lf | cr | crlf）
trim_trailing_whitespace = true # 去除行首的任意空白字符
inster_final_newline = true # 始终在文件夹末尾插入一个新行

[*.md] # 表示仅 md 文件适用以下规则
max_line_length = off
trim_trailing_whitespace = false